<%- include('../partials/header') %>

<section id="show-page">
    <div>Title:</div>
    <div><%= car.title %></div>
    <div>Release Year:</div>
    <div><%= car.releaseYear %></div>
    <div>Rating:</div>
    <div><%= car.mpaaRating %></div>
    <div>Now Showing:</div>
    <div><%= car.nowShowing ? 'Yes' : 'Nope' %></div>
    <!-- start cast list -->
    <div>Cast:</div>
    <ul>
        <%- car.cast.map(p =>
                `<li>${p.name} <small>${p.born.toLocaleDateString()}</small></li>`
        ).join('') %>
    </ul>
    <!-- end cast list -->
</section>
<!-- add to cast form below this comment -->
<form id="add-per-to-cast" action="/cars/<%= car._id %>/parts" method="POST">
    <select name="partId">
        <%- parts.map(p =>
                `<option value="${p._id}">${p.name}</option>`
        ).join('') %>
    </select>
    <button type="submit">Add to Cast</button>
</form>

<br><br>
<h2>notes</h2>

<% if (user) { %>
    <form id="add-note-form" method="POST" action="/cars/<%= car._id %>/notes">
        <label>Notes:</label>
        <textarea name="content"></textarea>
        <label>Rating:</label>
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <input type="submit" value="Add Notes">
    </form>
<% } %>

<% if (car.notes.length) { %>
    <table>
        <thead>
        <tr>
            <th>User</th>
            <th>Date</th>
            <th>Notes</th>
            <th>Rating</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <% let total = 0 %>
        <% car.notes.forEach(function(r) { %>
            <% total += r.rating %>
            <tr>
                <td class="note-user"><img src="<%= r.userAvatar %>"><%= r.userName %></td>
                <td><%= r.createdAt.toLocaleDateString() %></td>
                <td><%= r.content %></td>
                <td><%= r.rating %></td>
                <td>
                    <% if (user && user._id.equals(r.user)) { %>
                        <form action="/notes/<%= r._id %>?_method=DELETE" method="POST">
                            <button type="submit">X</button>
                        </form>
                    <% } %>
                </td>
            </tr>
        <% }); %>
        <tr>
            <td colspan="3"></td>
            <td><strong><%= (total / car.notes.length).toFixed(1) %></strong></td>
        </tr>
        </tbody>
    </table>
<% } else { %>
    <h5>No notes Yet</h5>
<% } %>


<%- include('../partials/footer') %>